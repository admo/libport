/// \file libport/cmath
/// \brief Portable <cmath>

#ifndef LIBPORT_CMATH
# define LIBPORT_CMATH

# include <libport/config.h>
# include <libport/detect-win32.h>

# include <cmath>

# if defined _MSC_VER

#  define _USE_MATH_DEFINES
#  include <cfloat>

#  if ! defined M_PI
#   error "<cfloat> did not defined M_PI."                              \
  "You probably included <cfloat> or <cmath> before <libport/cmath>."   \
  "Either include <libport/cfloat> first, or #define _USE_MATH_DEFINES before yourself."
#  endif

namespace std
{

#  define LIBPORT_BOUNCE(Posix, WinExpr)        \
  template<typename _Tp>                        \
  inline                                        \
  int                                           \
  Posix(_Tp __f)                                \
  {                                             \
    return WinExpr;                             \
  }

  LIBPORT_BOUNCE(isfinite, _finite(__f))
  LIBPORT_BOUNCE(isinf,    !_isnan(__f) && !_finite(__f))
  LIBPORT_BOUNCE(isnan,    _isnan(__f))

#  undef LIBPORT_BOUNCE

}

# endif // defined WIN32

#endif // !LIBPORT_CMATH

// Local Variables:
// mode: C++
// End:
