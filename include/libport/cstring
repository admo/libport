#ifndef LIBPORT_CSTRING
# define LIBPORT_CSTRING

# include <cstring>

# include "libport/detect_win32.h"

/// Whether the C string \a Lhs and \a Rhs are equal.
# define STREQ(Lhs, Rhs) (!strcmp (Lhs, Rhs))

namespace libport
{

  const char*
  strerror(int errnum);

#ifdef WIN32
  const char*
  getWinErrorMessage();
#endif

}


#endif // !LIBPORT_CSTRING
