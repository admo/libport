#ifndef LIBPORT_CERRNO
# define LIBPORT_CERRNO

# include <libport/detect-win32.h>

# include <cerrno>

# if defined WIN32
#  define ETIMEDOUT 110
# endif

# define ERRNO_RUN(Function, Args...)           \
  do {                                          \
    if (Function (Args) < 0)                    \
      {                                         \
        (void) err;                             \
        errnoabort(#Function);                  \
      }                                         \
  } while (false)

#endif // ! LIBPORT_CERRNO

